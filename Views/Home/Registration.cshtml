@model Dashboard.Models.UserViewValidation

<h1>Login Registration</h1>
<fieldset id = "Registration">
    <legend> Registration </legend>
<form asp-controller="Home" asp-action="Register" method="post">
    
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"/>
    <span asp-validation-for="FirstName"></span>

    <label asp-for="LastName"></label>
    <input asp-for="LastName"/>
    <span asp-validation-for="LastName"></span>
    
    <label asp-for="Email"></label>
    <input asp-for="Email"/>
    <span asp-validation-for="Email"></span>
    
    <label asp-for="Password"></label>
    <input asp-for="Password"/>
    <span asp-validation-for="Password"></span>

    <label asp-for="ConfirmationPassword"></label>
    <input asp-for="ConfirmationPassword"/>
    <span asp-validation-for="ConfirmationPassword"></span>
    <button type="submit">Register</button>
</form>
</fieldset>